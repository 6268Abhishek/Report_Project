@model Report_Project.Models.Report

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Report</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Report_Name" class="control-label"></label>
                <input asp-for="Report_Name" class="form-control" />
                <span asp-validation-for="Report_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Receiver_Email" class="control-label"></label>
                <input asp-for="Receiver_Email" class="form-control" />
                <span asp-validation-for="Receiver_Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Receiver_Name" class="control-label"></label>
                <input asp-for="Receiver_Name" class="form-control" />
                <span asp-validation-for="Receiver_Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Receiver_active_Inactive" /> @Html.DisplayNameFor(model => model.Receiver_active_Inactive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
